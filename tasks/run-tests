;; -*- mode: fennel; -*- vi:ft=fennel

(local {: run-tests}
  (require :lib.fennel-test))

(fn select-tests [default-tests]
  (case [(select 1 ((or _G.unpack table.unpack) arg))]
    (where tests (next tests)) tests
    _ default-tests))

(local tests
  [:test.json-test
   :test.readers-test
   :test.http-parser-test
   :test.headers-test
   :test.url-test
   :test.body-test
   :test.client-test])

(run-tests (select-tests tests))
